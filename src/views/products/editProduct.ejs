<!DOCTYPE html>
<html lang="en">
<%-include("./../partials/head.ejs", {title: "EditProduct"}) %> 

   

    <body class="fondo">
        <header>
            <%- include('./../partials/header') %>
        </header>
        
        <!-- <h1 class = "titulo-h1-edit"> AQUI EDITAMOS LOS PR0DUCTOS </h1> -->

        <main class="main-edit">
            <form action="/edit/<%=producto.id%>?_method=PUT" method="POST">
                <legend class="main-titulo-edit">Formulario de creación de producto</legend>
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="titulo" class="form-control" value="<%= producto.titulo %>" placeholder="Nombre del producto" >
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="text" id="price" name="precio" class="form-control" value="<%= producto.precio %>" placeholder="Precio del producto">
                </div>
                <div class="mb-3">
                    <label for="discount" class="form-label">Descuento:</label>
                    <input type="text" id="discount" name="descuento" class="form-control" value="<%= producto.descuento %>"placeholder="Descuento">
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Descipción:</label>
                    <textarea name="descripcion" id="description" class="form-control"> <%= producto.descripcion %>"</textarea>
                </div>
                <div class="mb-3 imagen-edit">
                    <label for="image"> Seleccionar Imagen </label>
                    <input type="file" name="image" />
                </div>
                <div class="mb-3 submit-edit">
                    <button type="submit" class="btn btn-primary">Editar Producto </button>
                </div>
                
                
              </form>
               
        </main>
        
            <%- include('./../partials/footer') %>     
    </body>
    </html>


</body>
</html>