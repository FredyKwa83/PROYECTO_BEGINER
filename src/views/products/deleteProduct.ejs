<!DOCTYPE html>
<html lang="en">
<%-include("./../partials/head.ejs", {title: "EditProduct"}) %> 

   

    <body class="fondo">
        <header>
            <%- include('./../partials/header') %>
        </header>
        
        <!-- <h1 class = "titulo-h1-edit"> AQUI EDITAMOS LOS PR0DUCTOS </h1>  -->

        <main class="main-edit">
            <form action="/delete/<%=producto.id%>/?_method=DELETE" method="POST" enctype="multipart/form-data">
                <legend class="main-titulo-edit">Formulario de Eliminacion de producto</legend>
                <input type="hidden" name="id"  value="<%=producto.id %>">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre del producto:</label>
                    <input type="text" id="name" name="nombre" class="form-control" value="<%= producto.nombre %>" placeholder="Nombre del producto" >
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Precio del producto:</label>
                    <input type="text" id="price" name="precio" class="form-control" value="<%= producto.precio %>" placeholder="Precio del producto">
                </div>

                <div class="mb-3">
                    <label for="discount" class="form-label">Descuento:</label>
                    <input type="text" id="discount" name="descuento" class="form-control" value="<%= producto.descuento %>"placeholder="Descuento">
                </div>
                                             
                <div class="mb-3 submit-edit">
                    <button type="submit" class="btn btn-primary">Eliminar Producto </button>
                </div>
            
              </form>
               
        </main>
        
            <%- include('./../partials/footer') %>     
    
</body>
</html>